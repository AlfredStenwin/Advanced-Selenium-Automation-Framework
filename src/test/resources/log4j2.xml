<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
	<Properties>
		<Property name="basePath">/IdealAutomationFramework/Advanced_Selenium_Framework/logs</Property>

	</Properties>

	<Appenders>
		<RollingFile name="fileLogger"
		
   			fileName="${basePath}/Testlog_${date:yyyy-MM-dd_hh-mm-ss}.log"
			filePattern="${basePath}/$${date:yyyy-MM}/-%d{MM-dd-yyyy}-%i.log">
			<PatternLayout>
				<pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %m%n
				</pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" modulate="true" />
				<SizeBasedTriggeringPolicy size="10MB" />
			</Policies>
			<!-- Max 100 files will be created everyday -->
			<DefaultRolloverStrategy max="100">
				<Delete basePath="${basePath}" maxDepth="10">
					<!-- Delete all files older than 30 days -->
					<IfLastModified age="30d" />
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="info" additivity="false">
			<appender-ref ref="fileLogger" />
		</Root>
	</Loggers>
</Configuration>